#!/bin/sh

volume=`pacmd list-sinks|grep -A 15 '* index'| awk '/volume: front/{ print $5 }' | sed 's/[%|,]//g'`

mpd_id=`pactl list sink-inputs | grep -B 17 "Music Player Daemon" | awk '/Volume: front/{ print $5 }' | sed 's/[%|,]//g'`

echo $mpd_id

