bar {
  # Specify the priamry display, or what shows the bar
  output HDMI-0
  i3bar_command i3bar  --transparency
  status_command i3status
  strip_workspace_numbers yes
  position top
  #hidden_state hide
  #modifier $mod

# please set your primary output first. Example: 'xrandr --output eDP1 --primary'
#tray_output primary
# tray_output eDP1

  bindsym button3 exec pactl set-sink-mute @DEFAULT_SINK@ toggle
  bindsym button2 exec pavucontrol
  #bindsym button3 exec pactl set-sink-mute @DEFAULT_SINK@ toggle
  bindsym button4 exec pactl set-sink-volume @DEFAULT_SINK@ +5%
  bindsym button5 exec pactl set-sink-volume @DEFAULT_SINK@ -5%
  bindsym $mod+button4 exec pactl set-sink-volume @DEFAULT_SINK@ +10%
  bindsym $mod+button5 exec pactl set-sink-volume @DEFAULT_SINK@ -10%
  
# font xft:URWGothic-Book 11

  colors {
      #background #222222
      background #00000000
      statusline #FDF6E3
      separator  #454947

