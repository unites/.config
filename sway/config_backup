bindsym $mod+p exec grim -g "$(slurp)" -t png - | wl-copy -t image/png
#capture the focused monitor to clipboard    
bindsym $mod+Shift+p exec grim -o $(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name') - | wl-copy

